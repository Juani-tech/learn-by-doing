# LearnByDoing Environment Configuration
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/learnbydoing

# GEMINI API Configuration
# Get your API key from: https://open.bigmodel.cn/
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash

# Optional: Brave Search API (for resource enrichment)
# Get key from: https://brave.com/search/api/
BRAVE_API_KEY=optional-brave-api-key

# Workflow Settings
MAX_ITERATIONS=5
QUALITY_THRESHOLD=0.85
VALIDATE_RESOURCES=true
VALIDATION_TIMEOUT=5

# API Settings
API_V1_STR=/api/v1
LOG_LEVEL=INFO
